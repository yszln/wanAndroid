<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_15dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_rv_home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingHorizontal="@dimen/_12dp"
        android:textStyle="bold"
        android:lineSpacingMultiplier="1.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="提示欧舒丹见风使舵见附件三大拉发送到防守打法" />

    <TextView
        android:id="@+id/item_rv_home_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12dp"
        android:textSize="@dimen/_12sp"
        android:paddingLeft="@dimen/_12dp"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_rv_home_title"
        tools:text="作者" />

    <TextView
        android:id="@+id/item_rv_home_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/_12dp"
        android:textColor="@color/gray"
        android:textSize="@dimen/_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_rv_home_author"
        tools:text="2020-1-1" />

    <View
        android:id="@+id/item_rv_home_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5dp"
        android:background="@color/gray_ef"
        android:alpha="0.5"
        android:layout_marginTop="@dimen/_15dp"
        app:layout_constraintTop_toBottomOf="@+id/item_rv_home_author" />
</androidx.constraintlayout.widget.ConstraintLayout>